<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/notice_classcifiation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alarm_activity_background_class"
                android:text="공지 사항"
                android:textSize="5pt"
                android:textColor="@color/black"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"/>

            <TextView
                android:id="@+id/alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 3:10"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
            <View
                android:id="@+id/alarm_seperate"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="@+id/notice_classcifiation"
                app:layout_constraintEnd_toEndOf="@+id/alarm_time"
                app:layout_constraintTop_toBottomOf="@+id/notice_classcifiation"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/alarm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서버점검이 있을 예정입니다."
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/alarm_seperate"
                app:layout_constraintStart_toStartOf="@id/alarm_seperate"
                android:layout_marginTop="10dp"
                android:textSize="10pt"/>

            <TextView
                android:id="@+id/alarm_AI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3월 20일 10am ~ 12am 까지 서버 점검이 있을 예정입니다."
                android:textSize="6pt"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:clipToOutline="true"
                android:lines="1"
                app:layout_constraintStart_toStartOf="@id/alarm_seperate"
                app:layout_constraintTop_toBottomOf="@id/alarm_title"
                android:layout_marginTop="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>