<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아기 정보를 등록해 주세요."
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아기 이름 : "
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_dialog_babyname_textfield"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="아기 이름"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:textColorHint="#A3A3A3"
            android:maxLines="1"
            />
    </LinearLayout>
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출산일 : "
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/register_dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜를 선택해주세요"
            android:maxLines="1"
            android:textColor="#AEAEAE"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/register_dialog_popcalendar"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="선택"
            android:background="@drawable/button_effect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_dialog_babyImageView"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_dialog_camera"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="카메라"
                android:background="@drawable/button_effect"/>

            <Button
                android:id="@+id/register_dialog_gallery"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="갤러리"
                android:background="@drawable/button_effect"/>


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect"
            android:text="취소"/>

        <Button
            android:id="@+id/register_dialog_regist"
            android:background="@drawable/button_effect"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">



    </LinearLayout>

</LinearLayout>