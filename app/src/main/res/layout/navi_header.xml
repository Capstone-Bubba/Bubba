<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/sidemenu_title_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bubba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sidemenu_title_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/sidemenu_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Bubba"
        android:textColor="@color/black"
        android:textSize="20pt"
        app:layout_constraintStart_toEndOf="@+id/sidemenu_title_image"
        app:layout_constraintTop_toTopOf="@id/sidemenu_title_image"
        app:layout_constraintBottom_toBottomOf="@id/sidemenu_title_image"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>