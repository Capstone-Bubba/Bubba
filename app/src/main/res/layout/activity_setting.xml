<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/setting_drawLayout"
    tools:context=".Activity.Setting">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/setting_appbar"
            layout="@layout/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/Naver_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf = "@id/setting_appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버 로그아웃"/>

        <Button
            android:id="@+id/kakao_logout"
            app:layout_constraintStart_toStartOf="@id/Naver_logout"
            app:layout_constraintEnd_toEndOf="@id/Naver_logout"
            app:layout_constraintTop_toBottomOf="@id/Naver_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오 로그아웃"/>
        <Button
            android:id="@+id/google_logout"
            app:layout_constraintStart_toStartOf="@id/kakao_logout"
            app:layout_constraintEnd_toEndOf="@id/kakao_logout"
            app:layout_constraintTop_toBottomOf="@id/kakao_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구글 로그아웃"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/setting_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu"
        app:itemTextAppearance="@style/MenuItems"
        app:itemIconSize="50dp"
        app:itemIconPadding="40dp"
        />

</androidx.drawerlayout.widget.DrawerLayout>