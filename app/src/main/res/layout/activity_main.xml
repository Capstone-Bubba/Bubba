<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Login_top_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Login_title_Image"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star"
        app:tint="#CDDC39" />

    <ImageView
        android:id="@+id/Login_title_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Login_SNS_Login"
        app:layout_constraintVertical_bias="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bubba"
        />


    <TextView
        android:id="@+id/Login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/Login_top_Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Login_top_Image"
        app:layout_constraintBottom_toBottomOf="@+id/Login_top_Image"
        app:layout_constraintHorizontal_bias="0.05"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="Bubba"/>


    <TextView
        android:id="@+id/Login_SNS_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNS Login"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@id/naver_login_button"
        app:layout_constraintBottom_toTopOf="@id/naver_login_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"/>


    <Button
        android:id="@+id/naver_login_button"
        android:background="#03C75A"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/naver_login_icon"
        android:text="네이버 로그인"
        android:textColor="@color/white"
        android:paddingRight="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/kakao_login_button"
        app:layout_constraintRight_toRightOf="@+id/kakao_login_button"
        app:layout_constraintBottom_toTopOf="@id/google_login_button"
        android:layout_marginBottom="10dp"/>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/kakao_login_button"
        app:layout_constraintRight_toRightOf="@+id/kakao_login_button"
        app:layout_constraintBottom_toTopOf="@id/kakao_login_button"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:id="@+id/kakao_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_wide"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

    <TextView
        android:id="@+id/Login_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="카피라이트 어쩌구 저쩌구"/>



</androidx.constraintlayout.widget.ConstraintLayout>