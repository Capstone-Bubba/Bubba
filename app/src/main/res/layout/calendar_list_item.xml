<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/calendar_item_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="2.5dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.143"
        android:text="THU\nJUN 30\n14:00" />

    <LinearLayout
        android:id="@+id/calendar_item_linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/calendar_item_time"
        app:layout_constraintStart_toEndOf="@id/calendar_item_time"
        app:layout_constraintTop_toTopOf="@id/calendar_item_time"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/calendar_item_EventText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Event" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:id="@+id/calendar_item_Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="아이가 울고 있습니다." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>