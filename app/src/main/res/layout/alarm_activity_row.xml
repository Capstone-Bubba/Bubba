<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/classification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alarm_activity_background_class"
        android:text="알람"
        android:textSize="5pt"
        android:textColor="@color/black"
        android:paddingHorizontal="15dp"
        android:paddingVertical="2dp"/>

    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 3:10"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/alarm_seperate"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@+id/classification"
        app:layout_constraintEnd_toEndOf="@+id/alarm_time"
        app:layout_constraintTop_toBottomOf="@+id/classification"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이가 울고 있습니다."
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/alarm_seperate"
        app:layout_constraintStart_toStartOf="@id/alarm_seperate"
        android:layout_marginTop="10dp"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/alarm_AI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 예측"
        android:textSize="5pt"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/alarm_seperate"
        app:layout_constraintTop_toBottomOf="@id/alarm_title"
        android:layout_marginTop="10dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>